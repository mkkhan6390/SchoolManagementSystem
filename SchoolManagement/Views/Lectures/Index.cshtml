@model IEnumerable<SchoolManagement.Data.Lecture>

@{
    ViewBag.Title = "Index";
}

<div class="container">
    <div class="row">
        <div class="col-10">
            <h4>Lecture</h4>
        </div>
        <div class="col-2">
            <button class="btn btn-sm btn-primary">
                @Html.ActionLink("Add New Lecture", "Create", null, new { style = "text-decoration:none; color: black;" })
            </button>
        </div>
    </div>
</div>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Batch.Class)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Batch.Div)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Subject.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Teacher.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ScheduleDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StartTime)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EndTime)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Hours)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Batch.Class)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Batch.Div)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Subject.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Teacher.Name)
        </td>

        <td>
            @Html.DisplayFor(modelItem => item.ScheduleDate).ToString().Substring(0, 10)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.StartTime)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EndTime)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Hours)
        </td>
        <td>
            <button class="btn btn-sm btn-outline-info">@Html.ActionLink("Edit", "Edit", new { id = item.Id })</button> |
            <button class="btn btn-sm btn-outline-info">@Html.ActionLink("Details", "Details", new { id = item.Id })</button> |
            <button class="btn btn-sm btn-outline-info">@Html.ActionLink("Delete", "Delete", new { id = item.Id })</button>
        </td>
    </tr>
}

</table>
