@model SchoolManagement.Data.Lecture

@{
    ViewBag.Title = "Create";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal h-50">
        <h4>Lecture</h4>
        <hr />

        <div class="form-group">
            Teacher
            <div class="col-md-10">
                @Html.DropDownList("TeacherId", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.TeacherId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            Subject
            <div class="col-md-10">
                @Html.DropDownList("SubjectId", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.SubjectId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            Date
            <div class="col-md-10">
                @Html.EditorFor(model => model.ScheduleDate, new { htmlAttributes = new { @class = "form-control", type = "date",  id = "scheduleDate" } })
                @Html.ValidationMessageFor(model => model.ScheduleDate, "", new { @class = "text-danger" })

            </div>
        </div>

        <div class="form-group">
            Start Time
            <div class="col-md-10">
                @Html.EditorFor(model => model.StartTime, new { htmlAttributes = new { @class = "form-control", type = "time" } })
                @Html.ValidationMessageFor(model => model.StartTime, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            Duration in hours
            <div class="col-md-10">
                @Html.EditorFor(model => model.Hours, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Hours, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            Batch
            <div class="col-md-6">
                @Html.DropDownList("BatchId", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.BatchId, "", new { @class = "text-danger" })
            </div>

        </div>


        <div class="form-group">
            <div class="ms-auto mt-2 mb-2">
                <input type="submit" value="Create" class="btn btn-sm btn-primary" />
            </div>
            <div id="selectedDateDisplay"></div>
            <div class="ms-auto mt-2 mb-2">
                <button class="btn btn-sm btn-warning">
                    @Html.ActionLink("Back", "Index")
                </button>
            </div>
        </div>
    </div>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
    $(document).ready(function() {
        $('#scheduleDate').change(function() {
            var selectedDate = $(this).val();
            $('#selectedDateDisplay').text('Selected Date: ' + selectedDate);
        });
    });
</script>