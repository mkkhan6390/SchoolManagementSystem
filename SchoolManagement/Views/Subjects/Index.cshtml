@model IEnumerable<SchoolManagement.Data.Subject>

@{
    ViewBag.Title = "Index";
}

<div class="container">
    <div class="row">
        <div class="col-10">
            <h4>Subject</h4>
        </div>
        <div class="col-2">
            <button class="btn btn-sm btn-primary">
                @Html.ActionLink("Add New Subject", "Create", null, new { style = "text-decoration:none; color: black;" })
            </button>
        </div>
    </div>
</div>
<hr />
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AddedBy)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AddedDate)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AddedBy)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AddedDate)
            </td>

            <td>
                <button class="btn btn-sm btn-outline-info">@Html.ActionLink("Edit", "Edit", new { id = item.Id })</button> |
                <button class="btn btn-sm btn-outline-info">@Html.ActionLink("Details", "Details", new { id = item.Id })</button> |
                <button class="btn btn-sm btn-outline-info">@Html.ActionLink("Delete", "Delete", new { id = item.Id })</button> |
                <button class="btn btn-sm btn-outline-info">@Html.ActionLink("Lectures", "Lectures", new { id = item.Id })</button>
            </td>
        </tr>
    }

</table>
