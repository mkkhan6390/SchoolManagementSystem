@model IEnumerable<SchoolManagement.Data.Batch>

@{
    ViewBag.Title = "Index";
}

<div class="container">
    <div class="row">
        <div class="col-10">
            <h4>Batch</h4>
        </div>
        <div class="col-2">
            <button class="btn btn-sm btn-primary">
                @Html.ActionLink("Add New Teacher", "Create", null, new { style = "text-decoration:none; color: black;" })
            </button>
        </div>
    </div>
</div>
<hr /> 
<table class="table">
    <tr>
        <th>
            Class Teacher
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Class)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Div)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CreatedBy)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CreatedDate)
        </th>

        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Teacher.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Class)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Div)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedBy)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedDate)
            </td>

            <td>
                <button class="btn btn-sm btn-outline-info">@Html.ActionLink("Edit", "Edit", new { id = item.Id })</button> |
                <button class="btn btn-sm btn-outline-info">@Html.ActionLink("Details", "Details", new { id = item.Id })</button> |
                <button class="btn btn-sm btn-outline-info">@Html.ActionLink("Delete", "Delete", new { id = item.Id })</button>
            </td>
        </tr>
    }

</table>
